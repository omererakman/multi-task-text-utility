{
  "name": "multi-task-text-utility",
  "version": "1.0.0",
  "description": "Customer support helper with structured JSON responses and metrics tracking",
  "main": "dist/src/run_query.js",
  "type": "module",
  "scripts": {
    "build": "tsc && cp -r prompts dist/",
    "start": "node dist/src/run_query.js",
    "dev": "tsx src/run_query.ts",
    "test": "node --import tsx --test tests/test_core.test.ts",
    "test:e2e": "node --import tsx --test tests/e2e.test.ts",
    "prepare": "husky"
  },
  "keywords": [
    "openai",
    "prompt-engineering"
  ],
  "author": "Omer Erakman <omererakman@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.7",
    "openai": "^4.77.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "husky": "^9.1.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
